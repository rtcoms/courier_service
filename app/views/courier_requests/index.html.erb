<div clas='container'>
<h1>Courier Requests</h1>

<br>

<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>Service type</th>
      <th>Cost</th>
      <th>Payment mode</th>
      <th>Status</th>
      <th>Sender fullname</th>
      <th>Sender pincode</th>
      <th>Receiver fullname</th>
      <th>Receiver pincode</th>
      <th>Status</th>
      <th>Tracking number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courier_requests.each do |courier_request| %>
      <tr>
        <td><%= courier_request.id %></td>
        <td><%= courier_request.service_type %></td>
        <td><%= courier_request.cost %></td>
        <td><%= courier_request.payment_mode %></td>
        <td><%= courier_request.status %></td>
        <td><%= courier_request.sender_fullname %></td>
        <td><%= courier_request.sender_pincode %></td>
        <td><%= courier_request.receiver_fullname %></td>
        <td><%= courier_request.receiver_pincode %></td>
        <td><%= courier_request.status %></td>
        <td><%= courier_request.tracking_number %></td>
        <td><%= link_to 'Show', courier_request %></td>
        <td><%= link_to 'Edit', edit_courier_request_path(courier_request) %></td>
        <td><%= link_to 'Destroy', courier_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Courier Request', new_courier_request_path %>
</div>
